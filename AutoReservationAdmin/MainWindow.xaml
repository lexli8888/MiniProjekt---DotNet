<Window x:Class="AutoReservationAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoReservationAdmin"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="750">
    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" FontSize="30" Height="50">Herzlich Wilkommen beim Auto Reservation Service</TextBlock>
            <StackPanel Orientation="Horizontal" Margin="0,175,0,0">
                <Button Width="150" Height="100" Margin="75,0,0,0" Click="Button_Autos">Autos</Button>
                <Button Width="150" Height="100" Margin="75,0,0,0" Click="Button_Kunden">Kunden</Button>
                <Button Width="150" Height="100" Margin="75,0,0,0" Click="Button_Reservationen">Reservationen</Button>
            </StackPanel>
        </StackPanel>
        
        
    </Grid>
</Window>
